<% provide(:title,"Edit #{@activity_type.name}")%>
<h1>Edit activity type <%= @activity_type.name %></h1>
<div class="row">
	<div class="col-md-6 offset3">
		<%= form_for(@activity_type) do |f| %>

			<%= render 'fields', f: f %>

			<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
