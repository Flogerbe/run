<% provide(:title,"Edit #{@category.name}")%>
<h1>Edit category <%= @category.name %></h1>
<div class="row">
	<div class="col-md-6 offset3">
		<%= form_for(@category) do |f| %>

			<%= render 'fields', f: f %>

			<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
