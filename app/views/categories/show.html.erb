<% provide(:title, @category.name)%>
<h1><%= @category.name %></h1>

<div class="row">
	<div class="col-md-6 offset3">
		<%= form_for(@category) do |f| %>
		<fieldset disabled>

			<%= render 'fields', f: f %>
		</fieldset>

		<% end %>
	</div>
</div><% if is_admin? %>
<%= link_to "Edit", edit_category_path(@category) %> | <%= link_to "Delete", @category, method: :delete, data: {confirm: "This will delete the category and all posts, are you sure?"} %>
<% end %>
<br>
<%= link_to "Manage categories", categories_path %>
