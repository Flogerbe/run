<%= provide(:title, current_user.admin? ? "Create new user" : "Sign up")%>
<h1><%= current_user.admin? ? "Create new user" : "Sign up" %></h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>

			<%= render 'fields', f: f %>

			<%= f.submit current_user.admin? ? "Create account" : "Create my account", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>