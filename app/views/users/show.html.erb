<% provide(:title, @user.name)%>
<% units="m" %>

<div class="row">
	<div class="col-md-3">
		<div class="row">
			<aside>
				<section>
					<h1>
						<%= gravatar_for @user %>
						<%= @user.name %>
					</h1>
				</section>
			</aside>
		</div>
		<div class="row">
			<div class="summary">
				Summary:
				<ul>
					<li><abbr title="Total distance"><span class="glyphicon glyphicon-resize-horizontal"></span></abbr> <%= number_to_human(@user.activities.sum(:distance), units: :distance) %></li>
					<li><abbr title="Total time"><span class="glyphicon glyphicon-time"></span></abbr> <%= distance_of_time_in_words(@user.activities.sum(:duration).seconds) %></li>
				</ul>
			</div>
		</div>
	</div>
	<div class="col-md-9">
		Posts:
		<% if @user_posts.any? %>
		<ul class="post_headers">
		<%= render partial: 'post_headers', collection: @user_posts %>
		</ul>
		<%= will_paginate @user_posts %>
		<% end %>
	</div>
</div>


<%= render 'shared/gmap_includes' %>